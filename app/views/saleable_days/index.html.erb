<h3>Calendar</h3>

<%= month_calendar events: @days do |date, days| %>
	<%= date.day %>

	<% days.each do |day| %>
		<div>
			<%= link_to day.seller.name, edit_saleable_day_path(day) %>
		</div>
	<% end %>
<% end %>

<br />
<br />
<br />
<h3>List of Days</h3>
<table class="table">
	<thead>
		<tr>
			<th scope="col">Month</th>
			<th scope="col">Day</th>
			<th scope="col">Child's Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @days.each do |day| %>
			<tr>
				<td><%= day.date.strftime("%B") %></td>
				<td><%= day.date.day %><%= day.date.day.ordinal %></td>
				<td>
					<%= link_to child_path(day.seller) do %>
						<%= day.seller.name %>
					<% end %>
				</td>
				<td>
					<%= link_to edit_saleable_day_path(day) do %>
						<button type="button" class="btn btn-primary">Buy</button>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
