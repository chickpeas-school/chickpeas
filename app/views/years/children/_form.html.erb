<%= form_with(model: child, url: [year, child], method: "post", local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dob, "Date of Birth" %>
    <%= form.date_field :dob, class: "form-control" %>
  </div>

  <div class="form-group">
    <% weekday_objects.each do |day| %>
      <div class="form-check">
        <%= form.check_box day[:symbol], class: "form-check-input" %>
        <%= form.label day[:symbol], day[:display], class: "form-check-label" %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Child", class: "btn btn-primary" %>
  </div>
<% end %>
