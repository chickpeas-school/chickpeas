<h4><%= @child.name %></h4>
<p>
  Date of Birth: <%= @child.dob %>
  <br />Weekdays at Chickpeas: <%= @child.days %>
</p>

<hr />

<h5>Parents</h5>
<div class="row">
  <% @child.parents.each do |parent| %>
    <div class="col-md-6">
      <%= link_to parent.name, parent_path(parent) %>
      <p>
        <%= parent.job %>
        <br /><%= parent.email %>
        <br /><%= parent.phone_number %>
        <br /><%= parent.address %>
      </p>
    </div>
  <% end %>
</div>

<% if @child.days_for_sale? %>
	<p><b>Days on Sale</b></p>
	<% @child.days_for_sale.each do |d| %>
		<p>Date: <%= d.date.to_date %></p>
	<% end %>
<% end %>

<% if @child.days_bought? %>
	<p><b>Days Bought</b></p>
	<% @child.days_bought.each do |d| %>
		<p>Date: <%= d.date.to_date %></p>
	<% end %>
<% end %>


<%= link_to 'Back', :back %>
