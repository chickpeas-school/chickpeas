<p>Name: <%= @child.first_name %> <%= @child.last_name %></p>

<% if @child.has_days_sold? %>
	<p><b>Days on Sale</b></p>
	<% @child.saleable_days.days_sold.each do |d| %>
		<p>Date: <%= d.date.to_date %></p>
	<% end %>
<% end %>

<% if @child.has_days_bought? %>
	<p><b>Days Bought</b></p>
	<% @child.saleable_days.days_bought.each do |d| %>
		<p>Date: <%= d.date.to_date %></p>
	<% end %>
<% end %>


<%= link_to 'Back', parent_path(@child.parent) %>
