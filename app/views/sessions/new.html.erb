<%= form_tag("/sessions", method: "post") do %>
	<% if flash.alert %>
		<div class="alert alert-danger" role="alert">
			<%= flash.alert %>
		</div>
  <% end %>

	<div class="form-row">
		<div class="form-group col-md-3">
			<%= label_tag :parent_email, "Email Address" %>
			<%= text_field_tag :parent_email, "", class: "form-control" %>
		</div>
	</div>
	<%= submit_tag "Login", class: "btn btn-primary" %>
<% end %>
